<h3 class="header center black-text" style="font-family: 'Merriweather', serif; text-shadow: 1px 1px 2px #4e4e4e;">Add new Category:</h3>
<form action="{{ path_for('category.new') }}" method="post" autocomplete="off">
    <div class="row">
        <div class="input-field col s12 l6">
            <input type="text" name="cat_new_title_sv" id="cat_new_title_sv" class="validate{{ validation_errors.cat_new_title_sv ? " invalid" : " " }}" value="{{old_input.cat_new_title_sv}}">
            <label for="cat_new_title_sv" data-error="{{ validation_errors.cat_new_title_sv ? validation_errors.cat_new_title_sv | first : " "  }}">Title (Swedish)</label>
        </div>
        <div class="input-field col s12 l6">
            <input type="text" name="cat_new_title_en" id="cat_new_title_en" class="validate{{ validation_errors.cat_new_title_en ? " invalid" : " " }}" value="{{old_input.cat_new_title_en}}">
            <label for="cat_new_title_en" data-error="{{ validation_errors.cat_new_title_en ? validation_errors.cat_new_title_en | first : " "  }}">Title (English)</label>
        </div>
    </div>
    <div class="row">
        <div class="input-field col s12">
            <label for="cat_new_desc_sv"  data-error="{{ validation_errors.cat_new_desc_sv ? validation_errors.cat_new_desc_sv | first : " "  }}"  data-translatable>Description (Swedish)</label>
            <textarea id="cat_new_desc_sv" name="cat_new_desc_sv" class="materialize-textarea" maxlength="511">{{old_input.cat_new_desc_sv }}</textarea>
        </div>
    </div>
    <div class="row">
        <div class="input-field col s12">
            <label for="cat_new_desc_en"  data-error="{{ validation_errors.cat_new_desc_en ? validation_errors.cat_new_desc_en | first : " "  }}" data-translatable>Description (English)</label>
            <textarea id="cat_new_desc_en"  name="cat_new_desc_en" class="materialize-textarea" maxlength="511">{{old_input.cat_new_desc_en }}</textarea>
        </div>
    </div>
    <div class="row">
        <div class="input-field col s12 l2">
            <input type="text" name="cat_new_order" id="cat_new_order" class="validate{{ validation_errors.cat_new_order ? " invalid" : " " }}" value="{{old_input.cat_new_order}}">
            <label for="cat_new_order" data-error="{{ validation_errors.cat_new_order ? validation_errors.cat_new_order | first : " "  }}">Position</label>
        </div>
    </div>
    <div class="row">
        <div class="input-field col s12">
            <button type="submit" class="btn waves-effect waves-light">
                Create<i class="material-icons right">send</i>
            </button>
        </div>
    </div>
    <input type="hidden" name="is_takeaway" value="{{ is_takeaway }}">
    <input type="hidden" name="path" value="{{ path }}">
    {{ csrf.field | raw }}
</form>

<html lang="">

    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="description" content="">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Blekan Admin: Sign in</title>

        <link href="https://fonts.googleapis.com/css?family=Merriweather|Roboto" rel="stylesheet">
        <!--Import Google Icon Font-->
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
        <!--Import materialize.css-->
        <link type="text/css" rel="stylesheet" href="{{ base_url() }}/styles/materialize.min.css"/>
        <!-- Custom styles -->
        <link type="text/css" rel="stylesheet" href="{{ base_url() }}/styles/main.css"/>

    </head>

    <body>
        <div class="container">
            {% include 'partials/flash.twig' %}
            <div class="row">
                <div class="col s12 m8 l4 push-m2 push-l4 z-depth-3 card-panel">
                    <form action="{{ path_for('forgot') }}" method="post" autocomplete="off">
                        <h2 class="header center black-text" style="font-family: 'Merriweather', serif; text-shadow: 1px 1px 2px #4e4e4e;" data-translatable>Forgot password?</h2>
                        <p>
                            Please enter the email that your are registered with!
                        </p>
                        <div class="row">
                            <div class="input-field col s12">
                                <input type="email" name="email" id="email" class="validate{{ validation_errors.email ? " invalid" : " " }}" value="{{old_input.email}}">
                                <label for="email" data-error="{{ validation_errors.email ? validation_errors.email | first : " " }}">Email</label>
                            </div>
                        </div>
                        <div class="row">
                          <div class="input-field col s12 l6">
                              <a class="btn waves-effect waves-light" href="{{ path_for('signin') }}">Back to sign in</a>
                          </div>
                            <div class="input-field col s12 l6">
                                <button type="submit" class="btn waves-effect waves-light blue darken-1">
                                    Send<i class="material-icons right">send</i>
                                </button>
                            </div>
                        </div>
                        {{ csrf.field | raw }}
                    </form>
                </div>
            </div>
        </div>

        <!-- remove bottom add to build-->

        <script type="text/javascript" src="{{ base_url() }}/scripts/jquery-2.1.1.min.js"></script>
        <script type="text/javascript" src="{{ base_url() }}/scripts/materialize.min.js"></script>
        <!-- remove top-->
        <script type="text/javascript">
            $(document).ready(function() {
                if ($('#flash-modal').length) {
                    $('#flash-modal').openModal();
                }
            });
        </script>

